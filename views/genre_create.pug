extends layout

block styles  
  link(rel='stylesheet', href='/stylesheets/create.css')
  block styles

block content
  div.nav
    div.links
        a.btn.light-blue(href='/catalog/record/create') New Record
        a.btn.light-blue(href='/catalog/recordcopy/create') New Copy
        a.btn.light-blue(href='/catalog/artist/create') New Artist
        a.focus.btn.light-blue #{title} 
  form(method='POST')
    h1.form-title #{title}
    div.input-group
      label Genre Name 
      input(type='text', name='name', maxlength='12', placeholder='--Please enter the genre name--', value=(genre===undefined ? '' : genre.name) required)
      if genre 
        div.input-group
        label(for='password') Please enter admin password 
        input(type='password', name='password' required)
    button.btn.light-green(type='submit') Submit
    if errors
      div
        each error in errors
          p #{error.msg}