extends layout 

block styles  
  link(rel='stylesheet', href='/stylesheets/detail.css')

block content 
  div.detail-grid
    img.detail-img(src=record.img, alt='Description of the image')
    div.detail-info
      p #[strong Title:] 
        a(href=record.url) #{record.title} 
      p #[strong Artist:] 
        a(href=record.artist.url) #{record.artist.name}
      div
        p #[strong Tracklist:]
        ol.tracks 
          each track in record.tracklist
            li #{track}
      p #[strong Genre:] #{record.genre.name}
      p #[strong Format:] #{record.format.name}
      p #[strong Year Released:] #{record.year}
    if toDelete
      p Are you sure you want to delete #{record.title} by #{record.artist.name}?
      form(method="post")
        input(type='hidden', name='recordid', value=record._id ) 
        button.btn.light-red(type='submit') Delete?
    else  
      div.detail-links
      a.btn.light-green Update 
      a.btn.light-red(href=`/catalog/record/${record._id}/delete`) Delete
    div.copies 
      p #[strong Copies in stock:]
       ul.in-stock 
          each recordCopy in record_copies
            li.detail-copies-in-stock
              img.small-detail-img(src=record.img, alt='Description of the image') 
              p #[strong Catalog Number:] #{recordCopy.catalogNum}
              p #[strong Condition:] #{recordCopy.condition}
              p #[strong Price:] Â£#{recordCopy.price}
              a.btn.light-green(href=recordCopy.url) Info