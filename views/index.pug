extends layout

block content
  div(class='layout-grid')
    div(class='side-nav')
      ul
        h3 Genre
        if genres.length
            each genre in genres
               a(href=genre.url) #{genre.name}
        else
          p There are no genres.
      ul 
        h3 Year 
        if years.length
            each year in years
               a(href=`/catalog/year/${year}`) #{year}
        else
          p There are no records.    
      ul
        h3 Format 
        a Single 
        a Album
    div(class='record-grid')
      h1= title
      if record_list.length
        ul
          each record in record_list
            li
              img(src=record.img, alt='Description of the image')
              p #{record.title}
              p #{record.artist.name}
              p #{record.genre.name}
              p #{record.year}
      else
        p There are no books.
    
